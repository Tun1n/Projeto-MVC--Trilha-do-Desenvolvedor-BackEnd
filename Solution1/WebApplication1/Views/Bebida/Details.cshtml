@model Bebida

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="" />
            </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Name</h2> 
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>
                <p class="btn btn-group align-content-lg-end">

                    <a asp-controller="Bebida" asp-action="List"
                       class="btn btn-outline-info">Ver todas as Bebidas</a>

                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                    asp-action="AdicionarItemNoCarrinhoCompra" asp-route-bebidaId="@Model.BebidaId">
                        Adicionar @Model.Name ao carrinho
                    </a>

                </p>
            </div>
        </div>
    </div>
</div>