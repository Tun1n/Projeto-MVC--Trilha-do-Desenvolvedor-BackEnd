@model Bebida

<div class="col-sm-4 col-md-4 col-lg-4">

     <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
     <p>Preço: @Model.Preco.ToString("C")</p>
    
    <h4>
        <a asp-controller="Bebida" asp-action="Details"
           asp-route-bebidaId="@Model.BebidaId">@Model.Name</a>
    </h4>
    
    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
            asp-action="AdicionarItemNoCarrinhoCompra" asp-route-BebidaId="@Model.BebidaId">
            Incluir no carrinho
        </a>
        </p>
    </div>

</div>